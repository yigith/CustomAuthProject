@model LoginViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter email" })
        @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter email" })
        @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}

